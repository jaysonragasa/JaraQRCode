<Window x:Class="JaraQRCode.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10" HorizontalAlignment="Left">
            <TextBox x:Name="txText" MaxLength="14" />
            <TextBlock Text="" />
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <TextBlock Text="QR Code in image form" />
                    <Image x:Name="imgQRCode" Width="200" Height="200" Stretch="Fill" />
                </StackPanel>

                <StackPanel Margin="5,0">
                    <TextBlock Text="QR Code in text form" />
                    
                    <TextBox IsReadOnly="True" x:Name="txQRstring" AcceptsReturn="True" FontFamily="Courier New" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
